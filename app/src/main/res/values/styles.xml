<?xml version="1.0" encoding="utf-8"?>
<resources>

<!--    design system styles-->
    <style name="title_large">
        <item name="android:text">Title Large</item>
        <item name="android:fontFamily">@font/inter_bold</item>
        <item name="android:textSize">22sp</item>
        <item name="android:lineHeight">28dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="title_medium">
        <item name="android:text">Title Medium</item>
        <item name="android:fontFamily">@font/inter_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineHeight">24dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="title_small">
        <item name="android:text">Title Small</item>
        <item name="android:fontFamily">@font/inter_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineHeight">20dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="label_large">
        <item name="android:text">Label Large</item>
        <item name="android:fontFamily">@font/urbanist</item>
        <item name="android:fontWeight">400</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineHeight">24dp</item>
        <item name="android:textColor">@color/text_unconfrimed</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="label_medium">
        <item name="android:text">Label Medium</item>
        <item name="android:fontFamily">@font/urbanist</item>
        <item name="android:fontWeight">400</item>
        <item name="android:textSize">12sp</item>
        <item name="android:lineHeight">20dp</item>
        <item name="android:textColor">@color/text_unconfrimed</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="body_large">
        <item name="android:text">Body Large</item>
        <item name="android:fontFamily">@font/urbanist</item>
        <item name="android:fontWeight">400</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineHeight">24dp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="body_medium">
        <item name="android:text">Body Medium</item>
        <item name="android:fontFamily">@font/urbanist</item>
        <item name="android:fontWeight">400</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineHeight">20dp</item>

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="body_small">
        <item name="android:text">Body Small</item>
        <item name="android:fontFamily">@font/urbanist</item>
        <item name="android:fontWeight">400</item>
        <item name="android:textSize">12sp</item>
        <item name="android:lineHeight">16dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

<!--    project styles-->
    <style name="onboarding_screen_background_image_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>


    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@android:color/transparent</item>

        <item name="android:background">@drawable/gradient_bg_95</item>

    </style>





<!--        raw styles-->
    <style name="test_page_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="label_for_edit_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textColor">#565B66</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CustomRoundedCorners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerSize">50%</item>
    </style>


</resources>