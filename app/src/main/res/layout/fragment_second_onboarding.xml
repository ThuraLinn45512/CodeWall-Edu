<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:background="@color/white"
    android:orientation="vertical">



    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageView2"
        android:src="@drawable/onboarding_second_screen_illustrator"
        style="@style/onboarding_screen_background_image_style"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <Spinner
        android:id="@+id/languageSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_sm"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/btn_skip2"
        style="@style/body_large"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"

        android:text="@string/skip"
        android:textColor="@color/accent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView2" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/title_second_screen_onboarding"

        style="@style/title_medium"
        android:layout_marginStart="@dimen/spacing_sm"
        android:layout_marginTop="88dp"

        android:text="@string/title_second_onboarding_screen"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/subtitle_second_onboarding_screen"

        style="@style/body_large"
        android:text="@string/subtitle_second_onboarding_screen"
        android:textColor="@color/text_primary"
        android:layout_marginTop="@dimen/spacing_xxs"
        android:maxWidth="360dp"

        app:layout_constraintStart_toStartOf="@+id/title_second_screen_onboarding"
        app:layout_constraintTop_toBottomOf="@+id/title_second_screen_onboarding" />



</androidx.constraintlayout.widget.ConstraintLayout>