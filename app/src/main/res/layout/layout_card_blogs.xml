<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_card_blog"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:background="@color/white"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:gravity="top"
    android:minHeight="180dp">


    <ImageView
        android:id="@+id/iv_blog_image"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:importantForAccessibility="no"
        android:scaleType="fitXY"
        tools:srcCompat="@tools:sample/avatars" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="16dp"
        android:gravity="top"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTitleBlogs"
            style="@style/title_medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="7 Figma plugin should know\n as an UI/UX Designer"
            android:textColor="@color/text_color_2" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|start"
            android:orientation="horizontal"
            android:layout_marginTop="-5dp"
            >

            <TextView
                android:id="@+id/tv_created_date"
                style="@style/body_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jan 1, 2025"
                android:textColor="@color/text_color_3" />

            <TextView
                android:id="@+id/dash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="."
                android:textColor="@color/text_color_2" />

            <TextView
                android:id="@+id/tvReadingTime"
                style="@style/body_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="5 min read"
                android:textColor="@color/text_color_3" />
        </LinearLayout>

        <TextView
            android:layout_marginTop="8dp"
            android:id="@+id/tv_short_description"
            style="@style/body_myanmar_text"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="These plugins help optimize design\n workflows, from content managemeThese plugins help optimize design\n workflows, from content manageme"
            android:textColor="@color/text_color_2" />
    </LinearLayout>


</LinearLayout>