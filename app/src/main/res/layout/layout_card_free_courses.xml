<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:paddingHorizontal="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp"
        app:strokeColor="@color/card_background"
        app:strokeWidth="1dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"

            android:id="@+id/card_root"
            >

            <ImageView
                android:src="@drawable/rectangle_placeholder"
                android:id="@+id/iv_Course"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:maxHeight="90dp" />

            <LinearLayout
                android:paddingTop="12dp"
                android:paddingHorizontal="16dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="110dp">
                <TextView
                    android:id="@+id/tv_title"
                    style="@style/title_large"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Figma Basic"
                    android:textColor="@color/text_color_1" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp"
                    >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        >
                        <ImageView
                            android:id="@+id/ivDuration"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/baseline_schedule_24" />

                        <TextView
                            android:id="@+id/tvDuration"
                            style="@style/label_large"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:text="20 Mins"
                            android:textColor="@color/text_color_3" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"

                        >
                        <ImageView
                            android:id="@+id/plan"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/baseline_menu_book_24" />

                        <TextView
                            android:id="@+id/tv_chapter_count"
                            style="@style/label_large"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:text="Chapters 14"
                            android:textColor="@color/text_color_3" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>




        </LinearLayout>


    </com.google.android.material.card.MaterialCardView>
</LinearLayout>