<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="24dp"

    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:background="@color/cyan"
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:scaleType="centerCrop"
                tools:srcCompat="@drawable/auto_slide_it"
                android:src="@drawable/auto_slide_it"
                android:transitionName="image"
                />

            <ImageView
                android:id="@+id/iconView"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="40dp"
                android:scaleType="centerCrop"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:srcCompat="@tools:sample/avatars"
                android:src="@drawable/baseline_notifications_none_white_24"
                />

            <TextView
                android:id="@+id/cwDateText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Started - 09 JUN 2024"
                android:textColor="@color/white"
                style="@style/label_medium"
                app:layout_constraintBottom_toBottomOf="@+id/iconView"
                app:layout_constraintStart_toEndOf="@id/iconView"
                app:layout_constraintTop_toTopOf="@+id/iconView" />

            <TextView
                android:id="@+id/cwTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="IT Basic Bootcamp Course"
                android:textColor="@color/white"
                style="@style/title_small"
                app:layout_constraintStart_toStartOf="@+id/iconView"
                app:layout_constraintTop_toBottomOf="@+id/iconView" />

            <TextView
                android:id="@+id/cwSubTitle"
                style="@style/body_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:maxWidth="280dp"
                android:text="Register now to get a discount for the first registered three person"
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="@+id/cwTitle"
                app:layout_constraintTop_toBottomOf="@+id/cwTitle" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>


