<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar_home_screen"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/white"
    android:elevation="4dp"
    android:theme="@style/ThemeOverlay.AppCompat.Light">

    <LinearLayout
        android:id="@+id/toolbar_content_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingEnd="16dp">

        <ImageView
            android:id="@+id/toolbar_brand_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/codewall_logo"
            android:contentDescription="App Logo" />

        <TextView
            android:id="@+id/toolbar_app_name"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/app_name"
            android:textColor="@color/text_color_1"
            android:textStyle="bold" />

        <View
            android:id="@+id/toolbar_spacer_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />


        <ImageView
            android:id="@+id/notificationIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/notification_icon"
            app:tint="@color/text_color_1"
            android:contentDescription="Notifications" />

        <ImageView
            android:id="@+id/profileIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/outline_account_balance_wallet_24"
            app:tint="@color/text_color_1"
            android:contentDescription="Profile" />

        <androidx.appcompat.widget.SearchView
            android:layout_marginStart="8dp"
            android:id="@+id/main_search_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:queryHint="Search ..."
            app:iconifiedByDefault="true"
            app:searchIcon="@drawable/search_24"
            app:closeIcon="@drawable/baseline_close_24"
            app:queryBackground="@android:color/transparent" />



    </LinearLayout>

</androidx.appcompat.widget.Toolbar>