<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".src.ui.views.core.explore.news.ReadingNewsFragment"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingVertical="16dp"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_logo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:importantForAccessibility="no"
            tools:src="@tools:sample/avatars"
            android:layout_marginStart="16dp"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="8dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >

                <TextView
                    android:id="@+id/tv_title_news"
                    style="@style/title_medium"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxWidth="250dp"
                    android:maxLines="2"
                    android:text="Ai News"
                    android:textColor="@color/text_color_2" />


                <TextView
                    android:id="@+id/tv_created_date"
                    style="@style/body_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Jan 1, 2025"
                    android:textColor="@color/text_color_3"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_title_news"
                    app:layout_constraintStart_toEndOf="@+id/dash"
                    app:layout_constraintTop_toTopOf="@+id/tv_title_news" />

            </LinearLayout>
            <TextView
                android:id="@+id/tv_tag_line"
                style="@style/label_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_3" />
        </LinearLayout>



    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="100dp"
            >




            <ImageView
                android:id="@+id/iv_blog"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="40dp"
                tools:srcCompat="@tools:sample/avatars" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="40dp"
                android:paddingEnd="8dp"
                tools:ignore="RtlSymmetry">



                <TextView
                    android:id="@+id/tv_description"
                    style="@style/label_myanmar_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_marginEnd="16dp"
                    android:textColor="@color/text_color_2" />

                <TextView
                    android:id="@+id/tv_content"
                    style="@style/body_myanmar_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/text_color_2" />


            </LinearLayout>


        </LinearLayout>

    </ScrollView>
</LinearLayout>















